@model List<vidly_aspnetmvc.Models.Movie>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>Movies</h2>
@if (Model.Count == 0)
{
    <p>No momento não temos filmes cadastrados no sistema!</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th scope="col">Customer</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var movie in Model)
            {
                <tr>
                    <td>@Html.ActionLink(movie.Name, "Details", "Movies", null, new { id = movie.Id })</td>
                </tr>
            }
        </tbody>
    </table>
}